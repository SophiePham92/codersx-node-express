extends ./layout/common.pug

block content
    h1 Create User

    if errors
        for error in errors
            .alert.alert-danger= error

    form(action='/users/create', method='POST')
        .form-group
            label(for='name') Name
            input#name.form-control(type='text', name='name', value=user ? user.name : '')
        .form-group
            label(for='phone') Phone
            input#phone.form-control(type='text', name='phone', value=user ? user.phone : '')
        button.btn.btn-primary Create User